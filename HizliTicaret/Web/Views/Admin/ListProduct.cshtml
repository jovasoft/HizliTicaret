@{

    ViewData["Title"] = "Index";
    Layout = "../Shared/Layouts/_AdminLayout.cshtml";
}

<!-- Layout container -->
<div class="layout-container">
    <!-- Layout content -->
    <div class="layout-content">

        <!-- Content -->
        <div class="container-fluid flex-grow-1 container-p-y">

            <h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
                <div>Ürünler</div>
                
                <a href="/Admin/AddProduct"><button type="button" class="btn btn-primary btn-round d-block"><span class="ion ion-md-add"></span>&nbsp; Ürün Ekle</button></a>
            </h4>

            <!-- Filters -->
            <div class="ui-bordered px-4 pt-4 mb-4">
                <div class="form-row">
                    <div class="col-md mb-4">
                        <label class="form-label">Durum</label>
                        <select class="custom-select">
                            <option>Hepsi</option>
                            <option>Yayında</option>
                            <option>Stok Tükenenler</option>
                        </select>
                    </div>
                    <div class="col-md col-xl-2 mb-4">
                        <label class="form-label d-none d-md-block">&nbsp;</label>
                        <a href="/Admin/UpdateProduct"><button type="button" class="btn btn-secondary btn-block">Listele</button></a>
                    </div>
                </div>
            </div>
            <!-- / Filters -->

            <div class="card">
                <div class="card-datatable table-responsive">
                    <table id="product-list" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>ID</th>
                                <th>Stok Durumu</th>
                                <th>Fiyat</th>
                                <th>Satıcı</th>
                                <th>Görüntüleme</th>
                                <th>Adet</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

        </div>
        <!-- / Content -->
    </div>
    <!-- Layout content -->

</div>
<!-- / Layout container -->

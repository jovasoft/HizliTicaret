@model List<ProductViewModel>
@{

    ViewData["Title"] = "Index";
    Layout = "../Shared/Layouts/_AdminLayout.cshtml";
}

<!-- Layout container -->
<div class="layout-container">
    <!-- Layout content -->
    <div class="layout-content">

        <!-- Content -->
        <div class="container-fluid flex-grow-1 container-p-y">

            <h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
                <div>Ürünler</div>

                <a href="/Admin/AddProduct"><button type="button" class="btn btn-primary btn-round d-block"><span class="ion ion-md-add"></span>&nbsp; Ürün Ekle</button></a>
            </h4>

            <!-- Filters -->
            <div class="ui-bordered px-4 pt-4 mb-4">
                <div class="form-row">
                    <div class="col-md mb-4">
                        <label class="form-label">Durum</label>
                        <select class="custom-select" id="ListPro">
                            <option value="2">Hepsi</option>
                            <option value="0">Yayında</option>
                            <option value="1">Stok Tükenenler</option>
                        </select>
                    </div>
                    <div class="col-md col-xl-2 mb-4">
                        <label class="form-label d-none d-md-block">&nbsp;</label>
                        <a href="/Admin/UpdateProduct"><button type="button" class="btn btn-secondary btn-block">Listele</button></a>
                    </div>
                </div>
            </div>
            <!-- / Filters -->

            <div class="card">
                <div class="card-datatable table-responsive">
                    <table id="product-list" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Ana Kategori</th>
                                <th>Kategori</th>
                                <th>Stok Durumu</th>
                                <th>Fiyat</th>
                                @*<th>Satıcı</th>
                                    <th>Görüntüleme</th>
                                    <th>Adet</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td>@product.MainCategory</td>
                                    <td>@product.Category.Name</td>
                                    <td>@product.Stock</td>
                                    <td>@product.Price</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <!-- / Content -->
    </div>
    <!-- Layout content -->

</div>
<!-- / Layout container -->
<script type="text/javascript">
    $(document).ready(function () {
        $('#ListPro').change(function () {
            var productId = $(this).val();
            if (productId != null && productId != '') {
                $.ajax({
                    type: "post",
                    url: '@Url.Action("ListProductFilter", "Admin")',
                    data: { productId: productId },
                    success: function (filterProducts) {
                        var table = $("#product-list tbody");
                        $(table).find("tr").remove();
                        $.each(filterProducts, function (index, product) {

                            if (product.category.categoryType == 0) {
                            table.append("<tr><td>" + product.name + "</td><td>" + " Kadın " + "</td><td>" + product.category.name + "</td><td>" + product.stock + "</td><td>" + product.price + "</td></tr>");
                            }
                            if (product.category.categoryType == 1) {
                                table.append("<tr><td>" + product.name + "</td><td>" + " Erkek " + "</td><td>" + product.category.name + "</td><td>" + product.stock + "</td><td>" + product.price + "</td></tr>");
                            }
                            if (product.category.categoryType == 2) {
                                table.append("<tr><td>" + product.name + "</td><td>" + " Çocuk " + "</td><td>" + product.category.name + "</td><td>" + product.stock + "</td><td>" + product.price + "</td></tr>");
                            }


                        });
                    },
                    error: function () {
                        /*Bu metod ile Ajax işlemi başarısız
                        olursa eğer hata mesajı verebiliyoruz.*/
                        alert("Hata");
                    },

                });
            }
        });
    });
</script>
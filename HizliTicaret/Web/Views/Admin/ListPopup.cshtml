@model PopupViewModel
@{

    ViewData["Title"] = "Index";
    Layout = "../Shared/Layouts/_AdminLayout.cshtml";
}

<!-- Layout container -->
<div class="layout-container">
    <!-- Layout content -->
    <div class="layout-content">

        <!-- Content -->
        <div class="container-fluid flex-grow-1 container-p-y">

            <h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
                <div>Kategoriler</div>

                <a href="/Admin/AddPopup"><button type="button" class="btn btn-primary btn-round d-block"><span class="ion ion-md-add"></span>&nbsp; Popup Ekle</button></a>
            </h4>

            <div class="card">
                <div class="card-datatable table-responsive">
                    <table id="popup-list" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Message</th>
                                <th>Durumu</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var message in ViewData["Messages"] as IEnumerable<Entities.Concrete.Popup>)
                            {
                                <tr id="@message.Id">
                                    <td>@message.Message</td>
                                    <td>
                                        @{
                                            if (message.Status == true)
                                            {
                                                <span>Yayında</span>
                                            }
                                            if (message.Status == false)
                                            {
                                                <span>Yayında Değil</span>
                                            }
                                        }
                                    </td>
                                    <td>
                                        <label class="btn btn-outline-secondary btn-sm float-right updatePop">Yayın Durumunu Değiş</label>
                                    </td>
                                    <td>
                                        <label class="btn btn-outline-primary btn-sm float-right removePop">Sil</label>
                                    </td>

                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
            </div>

        </div>
        <!-- / Content -->
    </div>
    <!-- Layout content -->

</div>
<!-- / Layout container -->

<script type="text/javascript">
    $(document).ready(function () {

        $(document).on('click', ".removePop", function () {
            var popupId = $(this).parent().parent().attr("id");

            $.ajax({
                url: '/Admin/DeletePopup',
                type: 'GET',
                data: { id: popupId }
            }).done(function () { $('#' + popupId).remove(); });

        });

        $(document).on('click', ".updatePop", function () {
            var popupId = $(this).parent().parent().attr("id");

            $.ajax({
                url: '@Url.Action("UpdatePopup", "Admin")',
                type: 'GET',
                data: { id: popupId },
                  success: function (fillPopuptable) {
                        var table = $("#product-list tbody");
                        $(table).find("tr").remove();
                        $.each(fillPopuptable, function (index, product) {
                            if (product.category.categoryType == 0) {
                                table.append("<tr id=" + product.id + "><td><a href=" + urlString + " class=" + '"d-block"' + ">" + product.name + "</a></td><td>" + " Kadın " + "</td><td>" + product.category.name + "</td><td>" + product.stock + "</td><td>" + (product.Price - (product.Price * product.Discounts) / 100) + "</td><td>" + "<label class=" + '"btn btn-outline-secondary btn-sm float-right updatePro"' + ">Düzenle</label>" + "</td><td>" + "<label class=" + '"btn btn-outline-primary btn-sm float-right removePro"' + ">Sil</label>" + "</td></tr>");
                            }
                        });
                    },
                    error: function () {
                        /*Bu metod ile Ajax işlemi başarısız
                        olursa eğer hata mesajı verebiliyoruz.*/
                        alert("Hata");
                    },

            });

        });
    });
</script>

@using System.Threading.Tasks
@model PopupViewModel
@{

    ViewData["Title"] = "AddPopup";
    Layout = "../Shared/Layouts/_AdminLayout.cshtml";
}


<!-- Layout container -->
<div class="layout-container">
    <!-- Layout content -->
    <div class="layout-content">

        <!-- Content -->
        <div class="container-fluid flex-grow-1 container-p-y">

            <h4 class="font-weight-bold py-3 mb-4">
                Popup Ekle
            </h4>
            <form asp-controller="Admin" asp-action="AddPopup" method="post" role="form">
                <div class="nav-tabs-top nav-responsive-sm">

                    <div class="tab-content">

                        <!-- Basic info -->
                        <div class="tab-pane fade show active" id="item-info">

                            <div class="card-body">
                                <div class="form-group">
                                    <div id="product-editor" style="height: 200px; width:500px"><textarea style="resize:none; height:200px; width:600px;" asp-for="Message" class="form-control"></textarea></div>
                                </div>
                                <div class="form-group">
                                    <label class="switcher switcher-sm">
                                        <div style="margin-bottom:10px">
                                            <span> Hemen Paylaş &nbsp;&nbsp; </span>
                                            <input type="radio" name="myRadios" value="0" asp-for="Status" t />
                                        </div>
                                        
                                        <div>
                                            <span> Şuan Paylaşma&nbsp;&nbsp;</span>
                                            <input type="radio" name="myRadios" value="1" t asp-for="Status"/>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <!-- / Basic info -->
                    </div>

                </div>

                <div class="text-right mt-3">
                    <button type="button" class="btn btn-default">İptal</button> &nbsp;
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
        <!-- / Content -->

    </div>
    <!-- / Layout container -->
</div>

@{

    ViewData["Title"] = "Index";
    Layout = "../Shared/Layouts/_AdminLayout.cshtml";
}


<!-- Layout container -->
<div class="layout-container">
    <!-- Layout content -->
    <div class="layout-content">

        <!-- Content -->
        <div class="container-fluid flex-grow-1 container-p-y">

            <h4 class="font-weight-bold py-3 mb-4">
                Kategori Ekle
            </h4>

            <div class="nav-tabs-top nav-responsive-sm">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#item-info">Kategori Bilgi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#item-discounts">İndirimler</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <!-- Basic info -->
                    <div class="tab-pane fade show active" id="item-info">

                        <div class="card-body">

                            <div class="form-group">
                                <label class="form-label">Kategori Adı</label>
                                <input type="text" class="form-control" value="Ayakkabı">
                            </div>

                            <div class="form-group">
                                <label class="form-label">Ana Kategori Adı</label>
                                <select class="custom-select">
                                    <option selected>Kadın</option>
                                    <option>Erkek</option>
                                    <option>Çocuk</option>
                                </select>
                            </div>
                        </div>
                        <hr class="m-0">
                    </div>
                    <!-- / Basic info -->
                    <!-- Discounts -->
                    <div class="tab-pane fade" id="item-discounts">
                        <div class="card-body">

                            <div class="table-responsive">
                                <table class="table product-discounts-edit">
                                    <thead>
                                        <tr>
                                            <th>İndirim</th>
                                            <th>Tarih</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" value="5">
                                                    <div class="input-group-append">
                                                        <div class="input-group-text">%</div>
                                                    </div>
                                                </div>
                                            <td><input type="text" class="product-discount-period form-control" value=""></td>
                                            <td>
                                                <a href="javascript:void(0)" class="btn btn-default md-btn-flat icon-btn btn-sm"><i class="ion ion-md-close"></i></a>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" value="10">
                                                    <div class="input-group-append">
                                                        <div class="input-group-text">%</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><input type="text" class="product-discount-period form-control" value="02/01/2018 - 03/01/2018"></td>
                                            <td>
                                                <a href="javascript:void(0)" class="btn btn-default md-btn-flat icon-btn btn-sm"><i class="ion ion-md-close"></i></a>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>

                            <button type="button" class="btn btn-outline-primary"><i class="ion ion-md-add"></i>&nbsp; İndirim Ekle</button>

                        </div>
                    </div>
                    <!-- / Discounts -->
                </div>
            </div>

            <div class="text-right mt-3">
                <button type="button" class="btn btn-default">İptal</button> &nbsp;
                <button type="button" class="btn btn-primary">Kaydet</button>
            </div>

        </div>
        <!-- / Content -->

    </div>

</div>
    <!-- / Layout container -->



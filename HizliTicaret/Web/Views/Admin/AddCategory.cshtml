@using System.Threading.Tasks
@model CategoryViewModel
@{

    ViewData["Title"] = "Index";
    Layout = "../Shared/Layouts/_AdminLayout.cshtml";
}

<!-- Layout container -->
<div class="layout-container">
    <!-- Layout content -->
    <div class="layout-content">

        <!-- Content -->
        <div class="container-fluid flex-grow-1 container-p-y">

            <h4 class="font-weight-bold py-3 mb-4">
                Kategori Ekle
            </h4>

            <div class="nav-tabs-top nav-responsive-sm">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#item-info">Kategori Bilgi</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <!-- Basic info -->

                    <div class="tab-pane fade show active" id="item-info">

                        <div class="card-body">

                            <form asp-controller="Admin" asp-action="AddCategory" method="post" role="form">
                                <div class="form-group">
                                    <label class="form-label">Kategori Adı</label>
                                    <input type="text" class="form-control" asp-for="Name">
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Ana Kategori Adı</label>
                                    <select class="custom-select" asp-for="CategoryType">
                                        <option selected value="0">Kadın</option>
                                        <option value="1">Erkek</option>
                                        <option value="2">Çocuk</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </form>
                        </div>
                        <hr class="m-0">
                    </div>
                    <!-- / Basic info -->
                </div>
            </div>

            <div class="text-right mt-3">
                <button type="button" class="btn btn-default">İptal</button> &nbsp;
                
            </div>

        </div>
        <!-- / Content -->

    </div>

</div>
<!-- / Layout container -->

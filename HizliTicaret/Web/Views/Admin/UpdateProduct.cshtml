@using System.Threading.Tasks
@model ProductViewModel
@{

    ViewData["Title"] = "Index";
    Layout = "../Shared/Layouts/_AdminLayout.cshtml";
}


<!-- Layout container -->
<div class="layout-container">
    <!-- Layout content -->
    <div class="layout-content">

        <!-- Content -->
        <div class="container-fluid flex-grow-1 container-p-y">

            <h4 class="font-weight-bold py-3 mb-4">
                Ürün Ekle <span class="text-muted">&nbsp;&nbsp;   #ÜrünId</span>
            </h4>

            <form asp-controller="Admin" asp-action="UpdateProduct" method="post" role="form">
                <div class="nav-tabs-top nav-responsive-sm">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#item-info">Ürün Bilgi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#item-description">Açıklama</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#item-images">Resimler</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <!-- Basic info -->
                        <div class="tab-pane fade show active" id="item-info">


                            <div class="card-body">

                                <div class="form-group">
                                    <label class="form-label">Başlık</label>
                                    <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Fiyat</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">₺</div>
                                        </div>
                                        <input type="text" class="form-control" asp-for="Price" value="@Model.Price">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Stok Adedi</label>
                                    <input type="text" class="form-control" asp-for="Stock" value="@Model.Stock">
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Durumu</label>
                                    <select class="custom-select" asp-for="IsAvailable" value="@Model.IsAvailable">
                                        <option selected value="true">Yayında</option>
                                        <option value="false">Stok Tükenen</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Ana Kategori</label>
                                    <select class="custom-select" asp-for="Category.MainCategoryId" id="AnaKategori">
                                        @{
                                            foreach (var Category in (ViewData["categories"] as IEnumerable<Entities.Concrete.Category>).Where(x => x.MainCategoryId == Guid.Empty))
                                            {
                                                if (Category.Id == Model.Category.MainCategoryId)
                                                {
                                                    <option value="@Category.Id" selected>@Category.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@Category.Id">@Category.Name</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Kategori</label>
                                    <select class="custom-select" asp-for="Category.Id" id="Kategori">
                                        @{
                                            foreach (var Category in (ViewData["categories"] as IEnumerable<Entities.Concrete.Category>).Where(x => x.MainCategoryId == Model.Category.MainCategoryId))
                                            {
                                                if (Category.Id == Model.Category.Id)
                                                {
                                                    <option value="@Category.Id" selected>@Category.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@Category.Id">@Category.Name</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>

                            </div>
                            <hr class="m-0">

                        </div>
                        <!-- / Basic info -->
                        <!-- Description -->
                        <div class="tab-pane fade" id="item-description">
                            <div class="card-body">
                                <div id="product-editor" style="height: 500px"><textarea style="resize:none; height:500px; width:1150px;" asp-for="Description">@Model.Description</textarea></div>
                            </div>
                        </div>
                        <!-- / Description -->
                        <!-- Images -->
                        <div class="tab-pane fade" id="item-images">
                            <div class="card-body">

                                <div id="product-images">

                                    <div class="media align-items-center bg-white ui-bordered py-3 mb-2">
                                        <div class="product-image-move ion ion-ios-move text-muted text-big p-4"></div>
                                        <a href="javascript:void(0)" class="d-block ui-w-100 mr-4">
                                            <img src="assets/img/uikit/s7edge-1.jpg" class="img-fluid" alt="">
                                        </a>
                                        <div class="media-body">
                                            <input type="text" value="example.com/assets/img/products/s7edge-1.jpg" class="form-control form-control-sm bg-transparent border-light mb-2" readonly>
                                            <label class="switcher switcher-sm">
                                                <input type="radio" name="product-primary-image" class="switcher-input" checked>
                                                <span class="switcher-indicator">
                                                    <span class="switcher-yes"></span>
                                                    <span class="switcher-no"></span>
                                                </span>
                                                <span class="switcher-label">Ana Resim</span>
                                            </label>
                                        </div>
                                        <button type="button" class="btn btn-outline-danger borderless icon-btn d-block mx-4"><i class="ion ion-md-close"></i></button>
                                    </div>

                                    <div class="media align-items-center bg-white ui-bordered py-3 mb-2">
                                        <div class="product-image-move ion ion-ios-move text-muted text-big p-4"></div>
                                        <a href="javascript:void(0)" class="d-block ui-w-100 mr-4">
                                            <img src="assets/img/uikit/s7edge-2.jpg" class="img-fluid" alt="">
                                        </a>
                                        <div class="media-body">
                                            <input type="text" value="example.com/assets/img/products/s7edge-2.jpg" class="form-control form-control-sm bg-transparent border-light mb-2" readonly>
                                            <label class="switcher switcher-sm">
                                                <input type="radio" name="product-primary-image" class="switcher-input">
                                                <span class="switcher-indicator">
                                                    <span class="switcher-yes"></span>
                                                    <span class="switcher-no"></span>
                                                </span>
                                                <span class="switcher-label">Primary image</span>
                                            </label>
                                        </div>
                                        <button type="button" class="btn btn-outline-danger borderless icon-btn d-block mx-4"><i class="ion ion-md-close"></i></button>
                                    </div>

                                </div>

                                <button type="button" class="btn btn-outline-primary mt-3"><i class="ion ion-md-cloud-upload"></i>&nbsp; Resim Yükle</button>

                            </div>
                        </div>
                        <!-- / Images -->
                    </div>
                </div>

                <div class="text-right mt-3">
                    <button type="button" class="btn btn-default">İptal</button> &nbsp;
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
        <!-- / Content -->

    </div>
    <!-- / Layout container -->
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $('#AnaKategori').change(function () {
            var KategoriID = $(this).val();
            if (KategoriID != null && KategoriID != '') {
                $.ajax({
                    type: "post",
                    url: '@Url.Action("AddProductAltKategorileriGetir", "Admin")',
                    data: { KategoriID: KategoriID },
                    success: function (altkategoriler) {
                        $("#Kategori").children().remove();

                        $.each(altkategoriler, function (index, kategori) {

                            $('#Kategori').append($('<option/>', {
                                value: kategori.id,
                                text: kategori.name,

                            }));
                        });

                    },
                    error: function () {
                        /*Bu metod ile Ajax işlemi başarısız
                        olursa eğer hata mesajı verebiliyoruz.*/
                        alert("Hata");
                    },

               });
            }
        });
    });

</script>